<div class="row">
	<h1> Welcome, <%=@user.name%> </h1>
</div>
<div class="row"><div class="col-lg-1 col-centered">
	<table class="table table">
		<col width="20px">
		<tbody>
			<%@posts.each do |post|%>
				<tr> 
					<td><%= link_to post[0].name + " says:", user_path(post[0])%></td>
					<td><p class="post_box"><%=post[1]%></p></td>
				</tr>
			<%end%>
		</tbody>
	</table>
</div></div>

<style type="text/css">
	.post_box {
		text-align: center;
	    border-radius: 25px;
	    border: 2px solid #8AC007;
	    background: #CCFFCC;
	    padding: 20px;
	    width: 400px;
	}
	.col-centered{
	    float: none;
	    margin: 0 auto;
	}
</style>

